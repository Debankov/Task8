<Page x:Class="HealthHere.Frames.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealthHere.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="215" Width="300">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Text="Авторизация" Margin="0,-61,0,0" FontSize="35"/>
            <StackPanel>
                <Grid>

                    <TextBlock  Text="Логин" HorizontalAlignment="Left" FontSize="20"/>
                    <TextBox x:Name="userLogin" Text="{Binding login}" HorizontalAlignment="Right" Width="200" FontSize="20"/>
                </Grid>
                <Grid Margin="0 15 0 25">
                    <TextBlock  Text="Пароль" HorizontalAlignment="Left" FontSize="20"/>
                    <PasswordBox x:Name="userPassword" HorizontalAlignment="Right" Width="200" FontSize="20"/>
                </Grid>
                <Grid>
                    <Button x:Name="LoginButton" HorizontalAlignment="Center" Width="190" Content="Войти" FontSize="20" Click="Login_click"/>
                </Grid>
                <Grid>
                    <TextBlock  
                        HorizontalAlignment="Center"
                        Text="Нет аккаунта?"/>
                    <Button HorizontalAlignment="Center" Width="auto" Content="Зарегистрироватсья" FontSize="20" Margin="20" Click="Registration_Click"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
